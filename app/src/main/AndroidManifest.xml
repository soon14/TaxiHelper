<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.taxihelper">


    //地图包、搜索包需要的基础权限

    <!--允许程序打开网络套接字-->
    <uses-permission android:name="android.permission.INTERNET"/>
    <!--允许程序设置内置sd卡的写权限-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <!--允许程序获取网络状态-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <!--允许程序访问WiFi网络信息-->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <!--允许程序读写手机状态和身份-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <!--允许程序访问CellID或WiFi热点来获取粗略的位置-->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".mvp.ui.activities.LoginActivity">

        </activity>
        <activity android:name=".mvp.ui.activities.ShenZhouAuthActivity"></activity>
        <activity
            android:name=".mvp.ui.activities.ShenZhouTaxiActivity"
            android:theme="@style/NoactionBar">
        </activity>
        <activity android:name=".mvp.ui.activities.LocationChooseActivity"></activity>
        <activity android:name=".mvp.ui.activities.CityChooseActivity"></activity>
        <activity android:name=".mvp.ui.activities.WaitingDriverArriveActivity"></activity>
        <activity
            android:theme="@style/translucent"
            android:name=".mvp.ui.activities.WaitingDriveAcceptActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"></action>
                <category android:name="android.intent.category.LAUNCHER"></category>
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.amap.api.v2.apikey"
            android:value="fc7f5b2ba27b24958bcd551754ec5214"/>
    </application>

</manifest>