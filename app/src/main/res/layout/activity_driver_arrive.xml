<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/item_background"
    android:layout_height="match_parent">

    <!--司机显示-->
    <android.support.v7.widget.CardView
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        android:padding="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            >

            <com.example.taxihelper.widget.CircleImageView
                android:id="@+id/driver_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/icon_driver_self_head"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/textView"
                style="@style/order_detail_former"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="司机:"
                app:layout_constraintLeft_toRightOf="@+id/driver_image"
                app:layout_constraintTop_toTopOf="@+id/driver_image"/>

            <TextView
                android:id="@+id/driver_name"
                style="@style/order_detail_later"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:text="李师傅"
                app:layout_constraintBottom_toBottomOf="@+id/textView"
                app:layout_constraintLeft_toRightOf="@+id/textView"
                app:layout_constraintTop_toTopOf="@+id/textView"/>

            <TextView
                android:id="@+id/textView2"
                style="@style/order_detail_former"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电话:"
                app:layout_constraintBottom_toBottomOf="@+id/driver_name"
                app:layout_constraintTop_toTopOf="@+id/driver_name"
                app:layout_constraintLeft_toRightOf="@+id/driver_name"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp"/>

            <TextView
                android:id="@+id/driver_phone_num"
                style="@style/order_detail_later"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:text="135222"
                app:layout_constraintBottom_toBottomOf="@+id/textView2"
                app:layout_constraintLeft_toRightOf="@+id/textView2"
                app:layout_constraintTop_toTopOf="@+id/textView2"/>

            <ImageView
                android:id="@+id/textView3"
                style="@style/order_detail_former"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/star"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@+id/driver_image"
                app:layout_constraintTop_toBottomOf="@+id/driver_image"
                app:layout_constraintVertical_bias="0.0"/>

            <TextView
                android:id="@+id/score"
                style="@style/order_detail_later"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:text="5.0"
                app:layout_constraintBottom_toBottomOf="@+id/textView3"
                app:layout_constraintLeft_toRightOf="@+id/textView3"
                app:layout_constraintRight_toRightOf="@+id/driver_image"
                app:layout_constraintTop_toTopOf="@+id/textView3"
                app:layout_constraintVertical_bias="0.0"/>


            <TextView
                android:id="@+id/textView4"
                style="@style/order_detail_former"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="车辆:"
                app:layout_constraintLeft_toRightOf="@+id/driver_image"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView"/>

            <TextView
                android:id="@+id/car_type"
                style="@style/order_detail_later"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:text="别克xx"
                app:layout_constraintBottom_toBottomOf="@+id/textView4"
                app:layout_constraintLeft_toRightOf="@+id/textView4"
                app:layout_constraintTop_toTopOf="@+id/textView4"/>

            <TextView
                android:id="@+id/textView5"
                style="@style/order_detail_former"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车牌号:"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                app:layout_constraintLeft_toLeftOf="@+id/textView2"/>

            <TextView
                android:id="@+id/car_num"
                style="@style/order_detail_later"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:text="津XXXX"
                app:layout_constraintBottom_toBottomOf="@+id/textView5"
                app:layout_constraintLeft_toRightOf="@+id/textView5"
                app:layout_constraintTop_toTopOf="@+id/textView5"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
    
   
    <FrameLayout
        android:id="@+id/main_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>
    


</LinearLayout>