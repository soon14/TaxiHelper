<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarSize">48dp</item>
    </style>

    <style
        name="NoactionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="order_detail_former">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="order_detail_later">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="FullScreen" parent="NoactionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@color/translucent_background</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="charge_tv_style">
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/tv_select</item>
        <item name="android:textColor">@color/red_300</item>
        <item name="android:textSize">@dimen/font_huge</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">56dp</item>
    </style>

